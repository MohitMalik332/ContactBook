@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="ShowAllNames" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Show All Contact Names
            </a>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Contact
            </a>
            <a asp-controller="Category" asp-action="ShowAllContactNo" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Show All Contact No
            </a>
        </div>
    </div>
    <br /> <br /> <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Contact Number
                </th>
                <th>
                    Delete
                </th>   
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.ContactNumber
                    </td>
                    @* <td width="6%">
                        <form asp-action="DeleteContact" asp-controller="Category" method="post" onsubmit="return confirm('Are you sure you want to delete this contact?');">
                            <input type="hidden" name="Id" value="@obj.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                    <td width="6%">
                        <form asp-action="EditContactt" asp-controller="Catagory" method="post" onsubmit="return confirm('Are you sure you want to delete this contact?');">
                            <input type="hidden" name="Id" value="@obj.Id" />
                            <button type="submit" class="btn btn-danger">Edit</button>
                        </form>
                    </td> *@
                    <td>
                        <a asp-controller="Category" asp-action="DeleteContact" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="EditContact" asp-route-id="@obj.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>